@model StarEventsTicketingSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-5">
    <h2>@Model.EventName</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Date:</strong> @Model.Date.ToString("dddd, dd MMMM yyyy")</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Venue:</strong> @(Model.Venue != null ? Model.Venue.VenueName : "Not specified")</p>
            <p><strong>Capacity:</strong> @(Model.Venue != null ? Model.Venue.Capacity : 0)</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Ticket Price:</strong> LKR @Model.TicketPrice.ToString("N2")</p>
            <p><strong>Available Tickets:</strong> @(ViewBag.AvailableTickets ?? 0)</p>
        </div>

        <div class="col-md-4">
            <h4>Book Tickets</h4>
            <button id="btnBookNow"
                    class="btn btn-primary w-100"
                    data-eventid="@Model.EventID"
            @((ViewBag.AvailableTickets ?? 0) == 0 ? "disabled" : "")>
                Book Now
            </button>
        </div>
    </div>
</div>

<!-- Booking Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Book Tickets</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="bookingForm" method="post" asp-action="BookEvent" asp-controller="BookEvent">
                    <input type="hidden" name="EventID" value="@Model.EventID" />

                    <div class="mb-3">
                        <label for="Quantity" class="form-label">Quantity</label>
                        <input type="number" class="form-control" id="Quantity" name="Quantity"
                               min="1"
                               max="@(ViewBag.AvailableTickets ?? 1)"
                               value="1" required />
                    </div>

                    <p><strong>Ticket Price:</strong> LKR @Model.TicketPrice.ToString("N2")</p>
                    <p><strong>Total Amount:</strong> LKR <span id="totalAmount">@Model.TicketPrice.ToString("N2")</span></p>

                    <button type="submit" class="btn btn-success w-100"
                    @((ViewBag.AvailableTickets ?? 0) == 0 ? "disabled" : "")>
                        Confirm Booking
                    </button>
                </form>

                <hr />

                <h6>Your Previous Bookings for this Event</h6>
                <ul>
                    @if (ViewBag.UserBookings != null && ViewBag.UserBookings.Count > 0)
                    {
                        foreach (var b in ViewBag.UserBookings)
                        {
                            <li>
                                Booking Date: @b.BookingDate.ToString("dd MMM yyyy"),
                                Tickets: @b.TicketCount,
                                Total Amount: LKR @b.TotalAmount.ToString("N2")
                            </li>
                        }
                        <p><strong>Total Amount for all bookings:</strong> LKR @ViewBag.UserTotalAmount.ToString("N2")</p>
                    }
                    else
                    {
                        <li>No previous bookings.</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap modal trigger
        var bookNowBtn = document.getElementById('btnBookNow');
        var bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));

        bookNowBtn.addEventListener('click', function () {
            bookingModal.show();
        });

        // Update total amount dynamically
        var ticketPrice = @Model.TicketPrice;
        var quantityInput = document.getElementById('Quantity');
        var totalAmountSpan = document.getElementById('totalAmount');

        quantityInput.addEventListener('input', function () {
            var qty = parseInt(quantityInput.value) || 1;

            // Ensure quantity does not exceed available tickets
            var maxTickets = @(ViewBag.AvailableTickets ?? 0);
            if (qty > maxTickets) {
                qty = maxTickets;
                quantityInput.value = qty;
            } else if (qty < 1) {
                qty = 1;
                quantityInput.value = qty;
            }

            totalAmountSpan.textContent = (ticketPrice * qty).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
        });
    </script>
}
