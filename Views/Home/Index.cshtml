@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Welcome to Star Events</h1>
            <p class="lead mb-4">Discover and book the most exciting events near you</p>
            <a href="#" class="btn btn-light btn-lg fw-semibold">Explore Events</a>
        </div>
    </section>

    <!-- Upcoming Events Section -->
    <section class="py-5">
        <div class="container">
            <h2 class="fw-bold mb-4">Upcoming Events</h2>
            <div class="row g-4">
                <!-- Example Event Card -->
                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <img src="~/Content/images/event1.jpg" class="card-img-top" alt="Event 1">
                        <div class="card-body">
                            <h5 class="card-title">Music Concert</h5>
                            <p class="card-text">Join the live music concert with popular artists.</p>
                            <a href="#" class="btn btn-primary fw-semibold">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <img src="~/Content/images/event2.jpg" class="card-img-top" alt="Event 2">
                        <div class="card-body">
                            <h5 class="card-title">Art Exhibition</h5>
                            <p class="card-text">Experience the finest art pieces by local artists.</p>
                            <a href="#" class="btn btn-primary fw-semibold">Book Now</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm h-100">
                        <img src="~/Content/images/event3.jpg" class="card-img-top" alt="Event 3">
                        <div class="card-body">
                            <h5 class="card-title">Food Festival</h5>
                            <p class="card-text">Taste cuisines from around the world at one place.</p>
                            <a href="#" class="btn btn-primary fw-semibold">Book Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Events Carousel -->
    <section class="bg-light py-5">
        <div class="container">
            <h2 class="fw-bold mb-4 text-center">Featured Events</h2>
            <div id="featuredCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Content/images/featured1.jpg" class="d-block w-100 rounded-4" alt="Featured 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/featured2.jpg" class="d-block w-100 rounded-4" alt="Featured 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/Content/images/featured3.jpg" class="d-block w-100 rounded-4" alt="Featured 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#featuredCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#featuredCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </section>

    <!-- Quick Links -->
    <section class="py-5">
        <div class="container text-center">
            <h2 class="fw-bold mb-4">Quick Access</h2>
            <div class="d-flex justify-content-center gap-4 flex-wrap">
                <a href="#" class="btn btn-outline-primary btn-lg rounded-3">Book Tickets</a>
                <a href="#" class="btn btn-outline-success btn-lg rounded-3">View My Bookings</a>
                <a href="#" class="btn btn-outline-warning btn-lg rounded-3">Loyalty Points</a>
                <a href="#" class="btn btn-outline-danger btn-lg rounded-3">Discounts & Offers</a>
            </div>
        </div>
    </section>
</div>
