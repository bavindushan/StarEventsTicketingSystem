@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {

            // Open Edit Modal
            $('.btn-warning').click(function () {
                var eventId = $(this).data('eventid'); // ✅ fixed

                $.get('@Url.Action("GetEvent", "Admin")', { id: eventId }, function (data) {
                    $('#EditEventID').val(data.eventID);
                    $('#EditOrganizerID').val(data.organizerID);
                    $('#EditVenueID').val(data.venueID);
                    $('#EditEventName').val(data.eventName);
                    $('#EditCategory').val(data.category);
                    $('#EditDate').val(data.date.split('T')[0]);
                    $('#EditLocation').val(data.location);
                    $('#EditTicketPrice').val(data.ticketPrice);
                    $('#EditDescription').val(data.description);

                    if (data.discountCode || data.discountPercentage) {
                        $('#editDiscountSection').show();
                        $('#EditDiscountCode').val(data.discountCode);
                        $('#EditDiscountPercentage').val(data.discountPercentage);
                        $('#EditDiscountStartDate').val(data.discountStartDate?.split('T')[0]);
                        $('#EditDiscountEndDate').val(data.discountEndDate?.split('T')[0]);
                    } else {
                        $('#editDiscountSection').hide();
                        $('#EditDiscountCode').val('');
                        $('#EditDiscountPercentage').val('');
                        $('#EditDiscountStartDate').val('');
                        $('#EditDiscountEndDate').val('');
                    }

                    $('#editEventModal').modal('show');
                });
            });

            // Create Event AJAX
            $('#createEventForm').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    headers: { "RequestVerificationToken": token },
                    success: function () {
                        $('#createEventModal').modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: 'Event Created!',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    },
                    error: function (xhr) {
                        try {
                            var res = JSON.parse(xhr.responseText);
                            $('#validationSummary').html(res.errors ? res.errors.join("<br/>") : res.message);
                        } catch {
                            $('#validationSummary').html("Failed to create event.");
                        }
                        Swal.fire('Error', 'Failed to create event.', 'error');
                    }
                });
            });

            // Edit Event AJAX
            $('#editEventForm').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: form.attr('action'),
                    type: 'POST',
                    data: form.serialize(),
                    headers: { "RequestVerificationToken": token },
                    success: function () {
                        $('#editEventModal').modal('hide');
                        Swal.fire({
                            icon: 'success',
                            title: 'Event Updated!',
                            timer: 2000,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    },
                    error: function (xhr) {
                        $('#editValidationSummary').text("Failed to update event.");
                        Swal.fire('Error', 'Failed to update event.', 'error');
                    }
                });
            });
        });

                function deleteEvent(eventId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This will permanently delete the event (and its discounts/bookings)!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/Admin/DeleteEvent/' + eventId, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        }
                    })
                    .then(() => {
                        Swal.fire({
                            icon: 'success',
                            title: 'Deleted!',
                            text: 'The event has been deleted.',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => location.reload());
                    })
                    .catch(() => {
                        Swal.fire('Error', 'Failed to delete event.', 'error');
                    });
                }
            });
        }

    </script>
}
