@model StarEventsTicketingSystem.ViewModels.ManageEventsViewModel
@using StarEventsTicketingSystem.ViewModels
@using StarEventsTicketingSystem.Enums
@{
    ViewData["Title"] = "Manage Events";
    var categories = ViewBag.Categories as List<EventCategory>;
    var eventNames = ViewBag.EventNames as List<string>;
    var locations = ViewBag.Locations as List<string>;
    var organizers = ViewBag.Organizers as List<StarEventsTicketingSystem.Models.ApplicationUser>;
    var venues = ViewBag.Venues as List<StarEventsTicketingSystem.Models.Venue>;
}

<div class="container mt-4">
    <h2>Manage Events (Admin)</h2>

    <!-- Create Event Button -->
    <div class="mb-3 text-end">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createEventModal">➕ Create Event</button>
    </div>

    <!-- Event Filters -->
    <form method="get" class="row mb-4">
        <div class="col-md-3">
            <select name="searchName" class="form-control">
                <option value="">-- Select Event --</option>
                @foreach (var name in eventNames)
                {
                    <option value="@name">@name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="location" class="form-control">
                <option value="">-- Select Location --</option>
                @foreach (var loc in locations)
                {
                    <option value="@loc">@loc</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <select name="category" class="form-control">
                <option value="">-- Select Category --</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat">@cat</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input type="date" name="date" class="form-control" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <!-- Event Cards -->
    <div class="row">
        @foreach (var ev in Model.Events)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5>@ev.EventName</h5>
                        <p><b>Organizer:</b> @ev.Organizer?.FullName</p>
                        <p><b>Date:</b> @ev.Date.ToShortDateString()</p>
                        <p><b>Location:</b> @ev.Location</p>
                        <p><b>Category:</b> @ev.Category</p>
                        <p><b>Venue:</b> @(ev.Venue != null ? ev.Venue.VenueName : "N/A")</p>
                        <p><b>Ticket Price:</b> $@ev.TicketPrice</p>

                        <button class="btn btn-sm btn-warning">Edit</button>
                        <button class="btn btn-sm btn-danger" onclick="deleteEvent(@ev.EventID)">Delete</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Create Event Modal -->
<div class="modal fade" id="createEventModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form id="createEventForm" asp-action="CreateEvent" asp-controller="Admin" method="post">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="validationSummary" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.OrganizerID" class="form-label"></label>
                        <select asp-for="NewEvent.OrganizerID" class="form-control" required>
                            <option value="">-- Select Organizer --</option>
                            @foreach (var org in organizers)
                            {
                                <option value="@org.Id">@org.FullName (@org.Email)</option>
                            }
                        </select>
                        <span asp-validation-for="NewEvent.OrganizerID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.VenueID" class="form-label"></label>
                        <select asp-for="NewEvent.VenueID" class="form-control" required>
                            <option value="">-- Select Venue --</option>
                            @foreach (var v in venues)
                            {
                                <option value="@v.VenueID">@v.VenueName</option>
                            }
                        </select>
                        <span asp-validation-for="NewEvent.VenueID" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.EventName" class="form-label"></label>
                        <input asp-for="NewEvent.EventName" class="form-control" required />
                        <span asp-validation-for="NewEvent.EventName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.Category" class="form-label"></label>
                        <select asp-for="NewEvent.Category" class="form-control" required>
                            <option value="">-- Select Category --</option>
                            @foreach (var cat in categories)
                            {
                                <option value="@cat">@cat</option>
                            }
                        </select>
                        <span asp-validation-for="NewEvent.Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.Date" class="form-label"></label>
                        <input asp-for="NewEvent.Date" type="date" class="form-control" required />
                        <span asp-validation-for="NewEvent.Date" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.Location" class="form-label"></label>
                        <input asp-for="NewEvent.Location" class="form-control" required />
                        <span asp-validation-for="NewEvent.Location" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.TicketPrice" class="form-label"></label>
                        <input asp-for="NewEvent.TicketPrice" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="NewEvent.TicketPrice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.Description" class="form-label"></label>
                        <textarea asp-for="NewEvent.Description" class="form-control" required></textarea>
                        <span asp-validation-for="NewEvent.Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewEvent.DiscountCode" class="form-label">Discount Code (Optional)</label>
                        <input asp-for="NewEvent.DiscountCode" class="form-control" />
                        <span asp-validation-for="NewEvent.DiscountCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.DiscountPercentage" class="form-label">Discount % (Optional)</label>
                        <input asp-for="NewEvent.DiscountPercentage" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="NewEvent.DiscountPercentage" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.DiscountStartDate" class="form-label">Discount Start Date (Optional)</label>
                        <input asp-for="NewEvent.DiscountStartDate" type="date" class="form-control" />
                        <span asp-validation-for="NewEvent.DiscountStartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewEvent.DiscountEndDate" class="form-label">Discount End Date (Optional)</label>
                        <input asp-for="NewEvent.DiscountEndDate" type="date" class="form-control" />
                        <span asp-validation-for="NewEvent.DiscountEndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // AJAX form submission with AntiForgeryToken
            $('#createEventForm').submit(function (e) {
            e.preventDefault();
            var form = $(this);
            var token = $('input[name="__RequestVerificationToken"]').val();

            // Log serialized data for debugging
            console.log("Serialized Form Data:", form.serialize());

            $.ajax({
                url: '@Url.Action("CreateEvent", "Admin")',
                type: 'POST',
                data: form.serialize(),
                headers: { "RequestVerificationToken": token },
                success: function () {
                    $('#createEventModal').modal('hide');
                    Swal.fire({
                        icon: 'success',
                        title: 'Event Created!',
                        text: 'The event has been successfully created.',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => location.reload());
                },
                error: function (xhr) {
                    console.log("Error Response:", xhr.responseText);
                    try {
                        var res = JSON.parse(xhr.responseText);
                        $('#validationSummary').html(res.errors ? res.errors.join("<br/>") : res.message);
                    } catch {
                        $('#validationSummary').html("Failed to create event.");
                    }
                    Swal.fire('Error', 'Failed to create event.', 'error');
                }
            });

            $('#addDiscountModal').on('show.bs.modal', function (e) {
                var button = $(e.relatedTarget);
                var eventId = button.data('eventid');
                $('#DiscountEventId').val(eventId);
            });

            $('#addDiscountForm').submit(function (e) {
                e.preventDefault();
                var form = $(this);

                $.ajax({
                    url: '@Url.Action("AddDiscount", "Admin")',
                    type: 'POST',
                    data: form.serialize(),
                    success: function (res) {
                        $('#addDiscountModal').modal('hide');
                        Swal.fire('Success', 'Discount added successfully!', 'success')
                            .then(() => location.reload());
                    },
                    error: function () {
                        Swal.fire('Error', 'Failed to add discount.', 'error');
                    }
                });
            });
        });

        function deleteEvent(eventId) {
            if (confirm("Are you sure you want to delete this event?")) {
                fetch('/Admin/DeleteEvent/' + eventId, {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val() }
                })
                .then(() => location.reload())
                .catch(() => alert("Failed to delete event."));
            }
        }
    </script>
}
